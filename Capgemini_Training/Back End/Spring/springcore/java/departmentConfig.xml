<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean definitions here -->

	<bean id="dev" class="com.capgemini.springcore.beans.DepartmentBean" >
		<property name="deptId" value="902"></property>
		<property name="deptName" value="Developement"></property>
	</bean>
	<bean id="hr" class="com.capgemini.springcore.beans.DepartmentBean" autowire-candidate="false" >
		<property name="deptId" value="903"></property>
		<property name="deptName" value="HR"></property>
	</bean>
</beans>