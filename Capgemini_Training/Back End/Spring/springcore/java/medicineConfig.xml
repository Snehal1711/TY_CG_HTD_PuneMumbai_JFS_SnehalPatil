<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean definitions here -->
	<bean id="medicine" class="com.capgemini.springcore.beans.Medicine">
		<property name="name" value="Crocine"></property>
		<property name="price" value="59.92"></property>
		<property name="type" value="Allopathic"></property>
		<property name="drugs">
			<!-- Configuration for list -->
			<!-- <list> <value>Abc1</value> <value>Paracetamol</value> <value>Xyz</value> 
				</list> -->
			<!-- Configuration for Set -->
			<set>
				<value>Abc1</value>
				<value>Paracetamol</value>
				<value>Xyz</value>

			</set>
		</property>
	</bean>
</beans>